    @Operation(
        summary = "Créer un nouvel incident",
        parameters = {
            @Parameter(ref = "entityIdHeader", required = true)
        }
    )
    @PostMapping("/incident")
    @Override
    IncidentResponse handle(@RequestBody IncidentRequest input, RequestContext ctx);
}
